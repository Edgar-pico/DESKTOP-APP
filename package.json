{
  "name": "desktop-app",
  "version": "1.0.1",
  "description": "",
  "license": "ISC",
  "author": "adrian-pina",
  "type": "commonjs",
  "main": "src/main/main.js",
  "scripts": {
    "start-watch": "nodemon --watch . --ext js,html,css --exec electron .",
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "hash": "node scripts/hash-password.js",
    "dist": "electron-builder --win nsis",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^38.2.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.6.0",
    "nodemon": "^3.1.10",
    "standard": "^17.1.2"
  },
  "eslintConfig": {
    "extends": "standard"
  },
  "dependencies": {
    "argon2": "^0.44.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.3",
    "mssql": "^12.0.0"
  },
  "build": {
    "appId": "com.speqtrumaerospace.desktopapp",
    "productName": "Desktop APP",
    "asar": true,
    "files": [
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "config/",
        "to": "config",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
